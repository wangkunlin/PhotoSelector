<?xml version="1.0" encoding="utf-8"?>
<com.wkl.photoselector.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_material_item"
    android:orientation="horizontal"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/iv_dir_cover"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginRight="10dip"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_dir_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_40" />

</com.wkl.photoselector.widget.CheckableLinearLayout>